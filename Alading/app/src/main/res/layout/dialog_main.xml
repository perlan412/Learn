<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_idle_background"
    android:clickable="true" >

    <ImageView
        android:id="@+id/id_mobile_signal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/mobile_signal_selector" />
    
    <ImageView 
        android:id="@+id/id_mobile_lable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@id/id_mobile_signal"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/id_notification_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="2dp"
            android:scaleType="center"
            android:layout_marginTop="@dimen/battery_margin_top"
            android:src="@drawable/notification" 
            android:visibility="gone"
            />

        <ImageView
            android:id="@+id/id_wifi_signal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:layout_alignParentRight="true" 
            android:src="@drawable/wifi_selector"
            />

        <ImageView
            android:id="@+id/id_image_battery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/battery_margin_right"
            android:src="@drawable/battery" />
    </LinearLayout>

    <TextView
        android:id="@+id/id_mnc_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23px"
        android:textColor="@color/silvery"
        android:textSize="@dimen/main_dialog_mnc_text_size" />

    <LinearLayout
        android:id="@+id/id_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="81px"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/id_time_hour_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/id_time_hour_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/time_semicolon" />

        <ImageView
            android:id="@+id/id_time_minute_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/id_time_minute_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:id="@+id/id_date_week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_time"
        android:layout_centerHorizontal="true"
        android:textColor="@color/silvery"
        android:textSize="@dimen/main_dialog_date_text_size" />

    <LinearLayout
        android:id="@+id/id_call"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="horizontal" >
<!--
        <ImageView
            android:id="@+id/id_call_mom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/call_mom" />

        <ImageView
            android:id="@+id/id_call_sos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/call_sos" />

        <ImageView
            android:id="@+id/id_call_dad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/call_dad" />
        -->
        <ImageView
            android:id="@+id/id_call_dialer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_dialer" />

        <ImageView
            android:id="@+id/id_call_contacts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_contacts" />
    </LinearLayout>

</RelativeLayout>